<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:ignore="MissingClass">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/restaurantsPhoto"
        shapeAppearanceOverlay="@style/roundedsquare"
        srcCompat="@drawable/main_photo"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="@dimen/_20ssp"
        android:layout_marginRight="@dimen/_20ssp"
        android:padding="@dimen/_2ssp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:srcCompat="@drawable/main_photo"
        tools:src="@tools:sample/avatars" />


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_31ssp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/_20ssp"
        android:weightSum="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurantsPhoto">
        <TextView
            android:id="@+id/tv_RatingNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="4.5"
            android:textColor="@color/green_dark2"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="-67dp"
            android:numStars="5"
            android:progressBackgroundTint="@color/light_gray"
            android:progressTint="@color/orang"
            android:clickable="false"
            android:isIndicator="true"
            android:rating="5"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:stepSize=".5" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sideTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5ssp"
        android:layout_marginRight="@dimen/_20ssp"
        android:fontFamily="@font/noor_bold"
        android:maxWidth="170dp"
        android:maxLines="2"
        android:gravity="end"
        android:foregroundGravity="right"
        android:text="rest"
        android:textColor="@color/green_dark2"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurantsPhoto" />

    <TextView
        android:id="@+id/underTittle"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_10ssp"
        android:layout_marginRight="@dimen/_20ssp"
        android:fontFamily="@font/noor_regular"
        android:gravity="right"
        android:maxLines="1"
        android:text="مشروبات- حلويات- مخبوزات"
        android:textColor="@color/green_dark2"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sideTittle" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20ssp"
        android:layout_marginTop="@dimen/_5ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <ImageView
            android:id="@+id/delivery"
            android:layout_width="@dimen/_15ssp"
            android:layout_height="@dimen/_15ssp"
            android:layout_margin="@dimen/_1ssp"
            android:visibility="gone"
            app:srcCompat="@drawable/rmini1"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/type"
            android:layout_width="@dimen/_15ssp"
            android:layout_height="@dimen/_15ssp"
            android:layout_margin="@dimen/_1ssp"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/iv_mini3"
            android:layout_width="@dimen/_15ssp"
            android:layout_height="@dimen/_15ssp"
            android:layout_margin="@dimen/_1ssp"
            android:visibility="gone"
            app:srcCompat="@drawable/rmini3"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/animal"
            android:layout_width="@dimen/_15ssp"
            android:layout_height="@dimen/_15ssp"
            android:layout_margin="@dimen/_1ssp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/iv_mini3"
            app:layout_constraintTop_toBottomOf="@+id/underTittle"
            app:srcCompat="@drawable/rmini4"
            tools:src="@tools:sample/avatars" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>