<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_65ssp"
    android:id="@+id/brand_item"
    android:layout_gravity="end"
    android:layout_margin="@dimen/_4ssp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="@dimen/_65ssp"
        android:layout_height="@dimen/_65ssp"
        android:orientation="vertical"
        android:background="@drawable/icon_gray_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/brandImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="@dimen/_6ssp"
            android:scaleType="centerCrop"
            android:src="@drawable/mak"
            app:shapeAppearanceOverlay="@style/roundedImageView"/>
    </LinearLayout>

    <TextView
        android:id="@+id/brandName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noor_bold"
        android:gravity="center"
        android:text=" ماكدونالدز"
        android:layout_marginTop="@dimen/_5ssp"
        android:textColor="@color/green_dark2"
        android:textSize="@dimen/_10ssp"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>