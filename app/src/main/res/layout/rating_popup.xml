<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/rate_popup"
    android:background="#99000000"

 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curved_solid_color"
        android:orientation="vertical"
        android:paddingStart="@dimen/_5ssp"
        android:layout_margin="@dimen/_30ssp"

        android:paddingEnd="@dimen/_5ssp"
        android:paddingBottom="@dimen/_20ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/closeR"
                android:layout_width="@dimen/_20ssp"
                android:layout_height="@dimen/_20ssp"
                android:layout_margin="@dimen/_20ssp"
                android:src="@drawable/close"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white"/>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/noor_bold"
                android:gravity="center_horizontal"
                android:text="تقيم المكان"
                android:textColor="@color/green_dark2"
                android:textSize="@dimen/_15ssp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_25ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_25ssp"
            android:background="@color/white"
            android:layout_gravity="end"
            android:paddingLeft="@dimen/_10ssp"
            android:paddingRight="@dimen/_10ssp"
            android:layout_height="@dimen/_27ssp">

            <EditText
                android:id="@+id/iv_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_27ssp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/_10ssp"
                android:layout_marginRight="@dimen/_10ssp"
                android:layout_toStartOf="@+id/n"
                android:background="@color/white"
                android:textColor="@color/green_dark"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="الاسم"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp">

            </TextView>
        </RelativeLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_25ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_25ssp"
            android:background="@color/white"
            android:layout_gravity="end"
            android:paddingLeft="@dimen/_10ssp"
            android:paddingRight="@dimen/_10ssp"
            android:layout_height="@dimen/_27ssp">

            <EditText
                android:id="@+id/iv_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_27ssp"
                android:inputType="phone"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/_10ssp"
                android:layout_marginRight="@dimen/_10ssp"
                android:layout_toStartOf="@+id/p"
                android:background="@color/white"
                android:textColor="@color/green_dark"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="رقم الهاتف"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp">

            </TextView>
        </RelativeLayout>
        <EditText
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35ssp"
            android:layout_marginLeft="@dimen/_25ssp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/_25ssp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="ملحوظة"
            android:paddingLeft="@dimen/_5ssp"
            android:paddingRight="@dimen/_5ssp"
            android:textColor="@color/green_dark"
            android:textColorHint="@color/green_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        </EditText>
        <RatingBar
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_25ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_25ssp"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:layout_gravity="center"
            android:outlineAmbientShadowColor="@color/green_dark"
            android:outlineSpotShadowColor="@color/orang"
            android:progressBackgroundTint="@color/dark_gray"
            android:progressTint="@color/green_dark"
            android:scaleX=".5"
            android:scaleY=".5" />

        <TextView
            android:id="@+id/tv_sendrate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30ssp"
            android:layout_marginLeft="@dimen/_80ssp"
            android:layout_marginRight="@dimen/_80ssp"
            android:layout_marginTop="@dimen/_20ssp"
            android:layout_marginBottom="@dimen/_20ssp"
            android:background="@drawable/send"
            android:fontFamily="@font/noor_bold"
            android:gravity="center"
            android:text="ارسال"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>