        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />-->


    <TextView
        android:id="@+id/tv_buttomArrange"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36ssp"
        android:background="@drawable/send"
        android:fontFamily="@font/noor_bold"
        android:scaleType="fitXY"
        android:gravity="center"
        android:layout_margin="@dimen/_90ssp"
        android:text="عرض النتائج"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="76dp"
        android:layout_height="106dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_arrangeTittle">

        <RadioButton
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20ssp">

        </RadioButton>

        <RadioButton
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_marginStart="@dimen/_20ssp"
            tools:ignore="TouchTargetSizeCheck">

        </RadioButton>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>