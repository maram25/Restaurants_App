    <TextView
        android:id="@+id/tv_arrangeTittle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44ssp"
        android:layout_marginLeft="@dimen/_75ssp"
        android:layout_marginTop="@dimen/_16ssp"
        android:layout_marginRight="@dimen/_75ssp"
        android:background="@drawable/titlerestaurant"
        android:fontFamily="@font/noor_bold"
        android:textColor="@color/green_dark2"
        android:gravity="center"
        android:textSize="@dimen/_14ssp"
        android:text="ترتيب حسب"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_arrange1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/noor_bold"
        android:text="الاكثر تقييم"
        android:textColor="@color/green_dark2"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_arrangeTittle" />

    <TextView
        android:id="@+id/tv_arrange2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/noor_bold"
        android:text="الاعلي بحث"
        android:textColor="@color/green_dark2"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_aline1" />

    <ImageView
        android:id="@+id/iv_aline1"
        android:layout_width="351dp"
        android:layout_height="11dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_arrange1"
        app:srcCompat="@drawable/line2"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/aline2"

        android:layout_width="351dp"
        android:layout_height="11dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_arrange2"
        app:srcCompat="@drawable/line2"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-20dp"
        app:srcCompat="@drawable/bg2" />
