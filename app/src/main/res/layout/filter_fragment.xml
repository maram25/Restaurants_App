<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.saudi_restaurants_and_cafes.android.Ui.Filter.FilterFragment">



    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/Progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </include>

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/rmini4"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rate"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/chuilde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/family"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35ssp"
            android:weightSum="6"
            android:layout_margin="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_20ssp"
            android:layout_marginLeft="@dimen/_20ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:ignore="TouchTargetSizeCheck">

            <ToggleButton
                android:id="@+id/toggleButton13"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/green_dark2"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10ssp"
                android:background="@drawable/roundborder"
                android:fontFamily="@font/noor_bold"
                android:textSize="@dimen/_12ssp"
                android:textOff="5"
                android:textOn="5"
                 />

            <ToggleButton
                android:id="@+id/toggleButton14"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/green_dark2"

                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10ssp"
                android:background="@drawable/roundborder"
                android:fontFamily="@font/noor_bold"
                android:textSize="@dimen/_12ssp"
                android:textOff="4"
                android:textOn="4" />

            <ToggleButton
                android:id="@+id/toggleButton8"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/green_dark2"

                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10ssp"
                android:background="@drawable/roundborder"
                android:fontFamily="@font/noor_bold"
                android:textSize="@dimen/_12ssp"
                android:textOff="3"
                android:textOn="3"
               />

            <ToggleButton
                android:id="@+id/toggleButton10"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/green_dark2"

                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10ssp"
                android:background="@drawable/roundborder"
                android:fontFamily="@font/noor_bold"
                android:textSize="@dimen/_12ssp"
                android:textOff="2"
                android:textOn="2" />

            <ToggleButton
                android:id="@+id/toggleButton11"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/green_dark2"

                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10ssp"
                android:background="@drawable/roundborder"
                android:fontFamily="@font/noor_bold"
                android:textSize="@dimen/_12ssp"
                android:textOff="1"
                android:textOn="1"
             />

            <ToggleButton
                android:id="@+id/toggleButton12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10ssp"
                android:layout_weight="1"
                android:textColor="@color/green_dark2"

                android:background="@drawable/roundborder"
                android:fontFamily="@font/noor_regular"
                android:textOff="بدون"
                android:textOn="بدون" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1ssp"
            android:layout_marginLeft="@dimen/_20ssp"
            android:layout_marginRight="@dimen/_20ssp"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_10ssp"
            app:layout_constraintHorizontal_bias="0.019"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rate">

        </View>


        <ImageView
        android:id="@+id/imageView4"
        android:layout_width="26dp"
        android:layout_height="22dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_filterTittle"
        app:srcCompat="@drawable/miniicon"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="26dp"
        android:layout_height="22dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/miniicon"
        tools:src="@tools:sample/avatars" />




    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-20dp"
        app:srcCompat="@drawable/bg2" />

    <TextView
        android:id="@+id/tv_filterTittle"
        android:layout_height="@dimen/_44ssp"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_75ssp"
        android:layout_marginTop="@dimen/_16ssp"
        android:layout_marginRight="@dimen/_75ssp"
        android:textColor="@color/green_dark2"
        android:background="@drawable/titlerestaurant"
        android:fontFamily="@font/noor_bold"
        android:gravity="center"
        android:textSize="@dimen/_14ssp"
        android:text="تصفية حسب"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_showRes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30ssp"
        android:layout_marginLeft="@dimen/_100ssp"
        android:layout_marginTop="@dimen/_40ssp"
        android:layout_marginRight="@dimen/_100ssp"
        android:background="@drawable/send"
        android:fontFamily="@font/noor_bold"
        android:gravity="center"
        android:scaleType="fitXY"
        android:text="عرض النتائج"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="26dp"
        android:layout_height="22dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/miniicon"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/green_dark2"
        android:fontFamily="@font/noor_bold"
        android:text="نوع الطبخ"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/tv_filterTittle" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/green_dark2"
        android:fontFamily="@font/noor_bold"
        android:text="خصائص المكان"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/green_dark2"
        android:fontFamily="@font/noor_bold"
        android:text="تقييم"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="22dp"
        android:layout_height="20dp"

        android:layout_marginTop="24dp"
        android:src="@drawable/music"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:text="مسموح حيونات"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/green_dark2"
        android:fontFamily="@font/noor_bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/rate" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="مكان للاطفال"
        android:textColor="@color/green_dark2"
        android:textSize="@dimen/_12ssp"

        android:fontFamily="@font/noor_bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/green_dark2"
        android:textSize="@dimen/_12ssp"

        android:text="اماكن للعائلات"
        android:fontFamily="@font/noor_bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="موسيقي"
        android:textSize="@dimen/_12ssp"

        android:textColor="@color/green_dark2"
        android:fontFamily="@font/noor_bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="27dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox7" />

    <CheckBox
        android:id="@+id/checkBox9"
        android:layout_width="27dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rate" />

    <CheckBox
        android:id="@+id/checkBox7"
        android:layout_width="27dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox9" />

    <CheckBox
        android:id="@+id/checkBox8"
        android:layout_width="27dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50ssp"
            android:layout_marginLeft="@dimen/_20ssp"
            android:layout_marginRight="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_5ssp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/R1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1ssp"
            android:background="@color/light_gray"
            android:layout_marginRight="@dimen/_20ssp"
            android:layout_marginLeft="@dimen/_20ssp"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="@dimen/_5ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout4">

        </View>

        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50ssp"
            android:layout_marginLeft="@dimen/_20ssp"
            android:layout_marginRight="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_5ssp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/R2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                app:layout_constraintStart_toStartOf="parent" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1ssp"
            android:layout_marginLeft="@dimen/_20ssp"
            android:layout_marginRight="@dimen/_20ssp"
            android:layout_marginBottom="@dimen/_5ssp"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.019"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout5">

        </View>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>